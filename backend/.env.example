# CouchDB Distributed Replication Configuration
# Copy this file to .env and configure your replication setup

# Primary CouchDB Server
COUCHDB_URL=http://localhost:5984/
COUCHDB_USER=Admin
COUCHDB_PASSWORD=password123

# Replication Nodes (comma-separated URLs)
# Example: REPLICATION_NODES=http://node1:5984/,http://node2:5984/,http://node3:5984/
REPLICATION_NODES=

# Replication Authentication (if different from primary)
REPLICATION_USER=Admin
REPLICATION_PASSWORD=password123

# Replication Settings
CONTINUOUS_REPLICATION=true
REPLICATION_FILTER=
REPLICATION_RETRY_SECONDS=30

# Example Production Configuration:
# COUCHDB_URL=https://primary-couch.example.com:6984/
# REPLICATION_NODES=https://replica1.example.com:6984/,https://replica2.example.com:6984/,https://replica3.example.com:6984/
# CONTINUOUS_REPLICATION=true
# REPLICATION_RETRY_SECONDS=30

# Example Development Configuration with Docker:
# COUCHDB_URL=http://localhost:5984/
# REPLICATION_NODES=http://localhost:5985/,http://localhost:5986/
# CONTINUOUS_REPLICATION=true